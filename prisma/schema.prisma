// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  bookings Booking[]
}

model Booking {
  id           String   @id @default(uuid())
  locationId   String
  locationName String
  dateType     String
  name         String
  email        String
  people       Int
  datetime     DateTime
  submittedAt  DateTime @default(now())
  notes        String?

  // NEW: associate booking with a user
  userId String?
  user   User?   @relation(fields: [userId], references: [id])
}
